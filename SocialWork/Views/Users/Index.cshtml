@model IEnumerable<SocialWork.Domain.Entity.User>
@{
    ViewBag.Title = "İstifadəcilərin sihayısı";
}

<a asp-action="Create">Istifadəci əlavə etmək</a>

<table class="table">
    <tr><th>Email</th><<th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Düzəliş etmək</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Kodu dəyişmək</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Sil
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
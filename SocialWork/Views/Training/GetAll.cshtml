@model System.Collections.Generic.List<SocialWork.Domain.Entity.Training>

@{
    //ViewBag.Title = "title";
    Layout = "_Layout";
}


<style>
    .card-buttons-group {
        text-align: right;
        padding: 10px;
    }
</style>

